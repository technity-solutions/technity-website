---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.jpg";
import personWorking from "@images/person-working.png";
import beforeAfter from "@images/before-after.png";
import constructionWorkers from "@images/construction-workers.png";
import aerialView from "@images/aerial-view.png";
import usingTools from "@images/using-tools.png";
import progressBuilding from "@images/progress-building.jpg";
import underConstruction from "@images/under-construction.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Expert Technical Consultation",
    subTitle:
      "Starting a software project can be complex. With our professional consultation services, we guide you through architecture decisions, technology selection, and project planning. Whether you're a startup or enterprise, our experts provide tailored advice on full-stack solutions, microservices design, and modern development practices.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Software architecture diagrams and technical planning documents.",
    imgTwo: personWorking,
    imgTwoAlt: "Developer working on software architecture",
  },
  {
    isRightSection: false,
    title: "Full-Stack Development Excellence",
    subTitle:
      "Our skilled developers bring precision and innovation to every software project. From frontend interfaces to backend APIs, TechNity Solutions delivers robust, scalable applications. We ensure the highest standards of code quality and security, utilizing cutting-edge frameworks and best practices from our extensive experience.",
    img: beforeAfter,
    imgAlt: "Before and after software transformation",
    btnExists: true,
    btnTitle: "Explore Technologies",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "DevOps & CI/CD Implementation",
    subTitle:
      "Effective DevOps practices are at the heart of successful software delivery. TechNity Solutions provides comprehensive CI/CD pipeline setup and DevOps implementation that keeps your deployments fast, reliable, and secure. Let us handle the complexities of infrastructure automation, monitoring, and deployment orchestration.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Development team implementing DevOps practices",
    imgTwo: aerialView,
    imgTwoAlt: "Overview of automated deployment pipeline",
  },
  {
    isRightSection: false,
    title: "Ongoing Support & Maintenance",
    subTitle:
      "Our commitment to your project doesn't end at deployment. TechNity Solutions offers comprehensive post-launch support services to ensure your application's performance, security, and scalability. From regular updates to emergency support, our responsive team provides seamless ongoing maintenance.",
    img: usingTools,
    imgAlt:
      "Developer monitoring and maintaining software systems",
  },
  {
    isRightSection: true,
    title: "Custom Enterprise Solutions",
    subTitle:
      "For our larger enterprise clients, TechNity Solutions offers custom software solutions designed to meet specific business challenges. By understanding your unique requirements, we architect tailored systems aimed at optimizing your operations, enhancing productivity, and driving digital transformation.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Enterprise software system under development",
    imgTwo: underConstruction,
    imgTwoAlt: "Modern enterprise architecture being built",
    btnExists: true,
    btnTitle: "Discuss Your Project",
    btnURL: "/contact",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "Uniting expertise with your vision, TechNity Solutions provides exceptional software consultancy and comprehensive development solutions, from consultation to deployment and beyond.";
const ogTitle = "Expert Software Consultancy Services | TechNity Solutions";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://technity-solutions.com/services",
    url: "https://technity-solutions.com/services",
    name: "Expert Software Consultancy Services | TechNity Solutions",
    description:
      "Uniting expertise with your vision, TechNity Solutions provides exceptional software consultancy and comprehensive development solutions, from consultation to deployment and beyond.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://technity-solutions.com",
      name: "TechNity Solutions",
      description:
        "Expert software consultancy specializing in full-stack development, microservices, and DevOps practices.",
    },
    inLanguage: "en-US",
  }}
>
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we deliver. At TechNity Solutions, we are dedicated to providing industry-leading software consultancy that ensures your applications are built to scale."
    mainStatTitle="98%"
    mainStatSubTitle="of our clients rate their experience with TechNity Solutions as exceptional"
    stats={[
      {
        stat: "99.5%",
        description: "project delivery success rate",
      },
      {
        stat: "150+",
        description: "successful deployments",
      },
      {
        stat: "90%",
        description: "client retention year-over-year",
      },
    ]}
  />
</MainLayout>
